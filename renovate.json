{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePresets": [
    ":ignoreModulesAndTests"
  ],
  "packageRules": [
    {
      "description": "Use fix commit message prefix for updates in src directory",
      "matchFileNames": [
        "src/**"
      ],
      "semanticCommitType": "fix",
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
